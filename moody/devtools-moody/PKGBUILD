# Maintainer: Moody <moodyhunter@outlook.com>

pkgname=devtools-moody
pkgver=1.0.0
pkgrel=4
pkgdesc="Development tools for the moody's toolchain"
arch=('x86_64')
license=('GPL')
url="https://github.com/moodyhunter/repo"
depends=('devtools')
source=()
sha512sums=()

package() {
    mkdir -p "$pkgdir"/usr/bin
    ln -s /usr/bin/archbuild "$pkgdir"/usr/bin/moody-x86_64-build

    mkdir -p "$pkgdir"/usr/share/devtools
    cp /usr/share/devtools/pacman.conf.d/extra-testing-x86_64_v3.conf "$pkgdir"/usr/share/devtools/pacman.conf.d/moody.conf

    cat <<EOF >>"$pkgdir"/usr/share/devtools/pacman-moody.conf
[moody]
Server = http://192.168.200.201:8000/$arch
SigLevel = Optional
EOF
}
