# Maintainer: Moody <mooodyhunter@outlook.com>

_target=x86_64-mos
_mos_arch=x86_64
_pkgbase=$_target-mlibc-headers

pkgname=$_pkgbase-git
pkgver=3425.53f954ce
pkgrel=1
pkgdesc="mlibc for the $_target toolchain - header-only"
arch=('any')
url="https://github.com/moodyhunter/mlibc-mos"
license=('MIT')
provides=($_pkgbase $_pkgbase-git)
conflicts=($_pkgbase)
groups=($_target-toolchain)
makedepends=(git gcc meson mos-api-headers-${_mos_arch})
source=("mlibc::git+https://github.com/moodyhunter/mlibc-mos.git")
sha512sums=('SKIP')
options+=(staticlibs)

pkgver() {
    cd mlibc
    printf "%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

prepare() {
    cd mlibc
    meson setup build \
        --prefix=$pkgdir/usr/$_target \
        --cross-file=ci/mos-x86_64.cross-file \
        -Dheaders_only=true
}

build() {
    true
}

package() {
    cd mlibc/build
    ninja install
}
